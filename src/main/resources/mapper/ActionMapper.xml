<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hellojalbajo.movie.action.ActionMapper">
	
    <select id="getMovieList" resultType="com.hellojalbajo.movie.Movie">
        select * from ott_moviedb_action
    </select>
    
    <select id="getMovieById" resultType="com.hellojalbajo.movie.Movie">
        select * from ott_moviedb_action where id = #{id}
    </select>

    <insert id="setActionMovie" parameterType="com.hellojalbajo.movie.Movie">
        insert into ott_moviedb_action (moviename,production_year,description) values(#{movieName},#{production_year},#{description})
    </insert>
</mapper>