<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.hellojalbajo.movie.comedy.ComedyMapper">
	<select id="getComedyList" resultType="com.hellojalbajo.movie.Movie">
		select id, moviename, production_year as productionYear, description from ott_moviedb_comedy;
	</select>
	
	<select id="getComedyById" resultType="com.hellojalbajo.movie.Movie">
		select * from ott_moviedb_comedy where id = #{id};
	</select>
	
	<insert id="insertMovie" parameterType="com.hellojalbajo.movie.Movie">
		insert into ott_moviedb_comedy (moviename, production_year, description) values (#{moviename}, #{production_year}, #{description});
	</insert>
	
	<delete id="deleteMovieById" parameterType="com.hellojalbajo.movie.Movie">
		delete from ott_moviedb_comedy where id = #{id};
	</delete>
</mapper>