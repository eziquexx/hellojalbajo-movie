<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hellojalbajo.movie.musical.MusicalMapper">
    <select id="getMusicalById" resultType="com.hellojalbajo.movie.musical.Musical">
        SELECT * FROM ott_moviedb_musical WHERE id = #{id}
    </select>
    
      <select id="getMusicalLimit10" resultType="com.hellojalbajo.movie.musical.Musical">
        SELECT * FROM ott_moviedb_musical ORDER BY id DESC LIMIT 10;
    </select>
    
       <insert id="insertMusical" parameterType="com.hellojalbajo.movie.musical.Musical">
    	INSERT INTO ott_moviedb_musical (moviename,production_year,DESCRIPTION) VALUES (#{movieName},#{production_year},#{description})
    </insert>
</mapper>